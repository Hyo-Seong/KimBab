<UserControl x:Class="KimBab.Controls.PaymentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KimBab.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="Black">
        <Grid Background="Gray" Width="500" Height="250" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="결제" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="60" Height="25" Click="Button_Click" Margin="0,0,95,15"/>
            <Button Content="취소" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="60" Height="25" Click="Button_Click" Margin="0,0,15,15"/>
            <TextBlock x:Name="MenuString" Text="{Binding MenuString}" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top"/>

        </Grid>
    </Border>
</UserControl>
